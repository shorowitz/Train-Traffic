<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../partials/head.html.ejs %>
  </head>
  <body>
  <header>
    <%- include ../partials/nav.html.ejs %>
  </header>
  <div class="container">
        <%- include ../partials/widget.html.ejs %>
      <div class="main">
        <form class="form-horizontal" action="/users/login" method="post">
          <fieldset>
          <legend id="legend">Login</legend>
            <div class="form-group">
              <label for="email" class="col-lg-2 control-label">Email</label>
              <div class="col-lg-5">
                <input type="text" class="form-control" id="inputEmail" placeholder="Email" name="email">
              </div>
            </div>
            <div class="form-group">
              <label for="password" class="col-lg-2 control-label">Password</label>
                <div class="col-lg-5">
                  <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
                </div>
            </div>
            <div class="form-group">
              <div class="col-lg-5 col-lg-offset-2">
                <button type="reset" class="login">Cancel</button>
                <button type="submit" class="login">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
  </body>
</html>
